<%- include("../_header") -%>

<h1>Edit a Book</h1>

<form action="/livres/edit/<%= model.Livre_ID %>" method="post">
  <div class="form-horizontal">
    <%- include("_editor") -%>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Edit" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/livres">Cancel</a>
      </div>
    </div>
  </div>
</form>

