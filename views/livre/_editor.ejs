<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Titre">Title</label>
  <div class="col-sm-7">
    <input
      autofocus
      class="form-control"
      name="Titre"
      value="<%= model.Titre %>"
    />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Auteur">Author</label>
  <div class="col-sm-7">
    <input class="form-control" name="Auteur" value="<%= model.Auteur %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Quantite">Quantity</label>
  <div class="col-sm-7">
    <input
      type="number"
      class="form-control"
      name="Quantite"
      value="<%= model.Quantite %>"
    />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Commentaires">Description</label>
  <div class="col-sm-7">
    <textarea
      class="form-control"
      cols="5"
      name="Commentaires"
      maxlength="3200"
      rows="5"
    >
<%= model.Commentaires %></textarea
    >
  </div>
</div>
