<%- include("../_header") -%>

<h1>Liste des Emprunts (<%= model.length %>)</h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Borrow ID</th>
        <th>User Full Name</th>
        <th>Book Title</th>
        <th>Date</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/emprunts/create">Add +</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const emprunt of model) { %>
      <tr>
        <td><%= emprunt.Emprunt_ID %></td>
        <td><%= emprunt.Nom %> <%= emprunt.Prenom %></td>
        <td><%= emprunt.Titre %></td>
        <td><%= emprunt.Date %></td>
        <td class="d-print-none">
          <a
            class="btn btn-sm btn-warning"
            href="/emprunts/edit/<%= emprunt.Emprunt_ID %>"
            >Edit</a
          >
          <a
            class="btn btn-sm btn-danger"
            href="/emprunts/delete/<%= emprunt.Emprunt_ID %>"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("../_footer") -%>
